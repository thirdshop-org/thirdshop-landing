---
import Layout from "@/layouts/default.astro"
import { DEFAULT_LOCALE } from "astro:env/client";

const currentLocale = Astro.currentLocale || DEFAULT_LOCALE;

const features = [
    {
        title: "Open Documentation",
        slug: "open-documentation",
        icon: "ðŸ“š",
        short: "Knowledge Base",
        description: "Create beautiful, collaborative documentation. Version controlled, instantly published.",
    },
    {
        title: "Open Communication",
        slug: "open-communication",
        icon: "ðŸ’¬",
        short: "P2P Messaging",
        description: "Secure peer-to-peer communication without intermediaries. End-to-end encryption.",
    },
]
---

<Layout>
    <div class="relative flex flex-col gap-16 md:gap-24 py-12 md:py-20 max-w-7xl mx-auto">
        
        <!-- SECTION HERO & SOFTWARE INTRO -->
        <section class="flex flex-col gap-8 md:gap-12 relative z-10">
            <div class="space-y-6">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-violet-200 bg-violet-50 text-violet-700 text-xs font-bold uppercase tracking-wider w-fit">
                    <span class="w-2 h-2 rounded-full bg-violet-500 animate-pulse"></span>
                    Early Access
                </div>
                
                <h1 class="text-5xl md:text-7xl lg:text-9xl font-bold font-serif text-slate-900 tracking-tight leading-[0.9]">
                    La Brique.
                </h1>
                
                <p class="text-xl md:text-2xl text-slate-600 max-w-3xl font-light leading-relaxed">
                    The all-in-one interface for your digital sovereignty.
                    <span class="text-slate-900 font-medium">Create private IPFS networks</span> to share catalogs, files, and resources between your devices, your team, or your family.
                </p>
            </div>

            <!-- DOWNLOAD SECTION (INTERACTIVE) -->
            <div class="p-1 max-w-md w-full">
                <div class="bg-slate-900 text-white p-6 rounded-2xl shadow-2xl relative overflow-hidden group">
                    <!-- Decorative background gradient -->
                    <div class="absolute top-0 right-0 w-64 h-64 bg-violet-600 rounded-full blur-[80px] opacity-20 -mr-16 -mt-16 pointer-events-none"></div>

                    <h3 class="text-lg font-medium mb-1">Get the Software</h3>
                    <p class="text-slate-400 text-sm mb-6">Version 0.1.4-alpha â€¢ <span id="os-detect-text">Detecting your OS...</span></p>

                    <!-- BUTTON WITH OS DETECTION -->
                    <div class="relative">
                        <button 
                            id="download-btn"
                            disabled
                            class="w-full py-4 px-6 bg-white/10 border border-white/10 rounded-xl flex items-center justify-between text-slate-300 cursor-not-allowed transition-all group-hover:bg-white/15"
                        >
                            <span class="flex items-center gap-3 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                                <span id="btn-label">Download La Brique</span>
                            </span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lock"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                        </button>
                        
                        <!-- Tooltip / Message -->
                        <div class="mt-3 text-xs text-violet-300 flex items-center gap-2">
                            <span class="inline-block p-1 bg-violet-500/20 rounded text-violet-300">
                                MEMBERS ONLY
                            </span>
                            Available to registered contributors only.
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION: THE "BRICK" MODULES -->
        <section class="grid grid-cols-1 lg:grid-cols-12 gap-6 md:gap-8">
            <div class="lg:col-span-4 flex flex-col justify-center">
                <h2 class="text-3xl md:text-4xl font-serif font-bold text-slate-900 mb-4">
                    Modular Power.
                </h2>
                <p class="text-slate-600 mb-6">
                    La Brique isn't just a file sharing tool. It aggregates our three core protocols into a single, unified experience. Configure your own P2P networks and duplicate your data where it matters.
                </p>
            </div>

            <div class="lg:col-span-8 grid grid-cols-1 md:grid-cols-3 gap-4">
                {features.map((feature) => (
                    <a 
                        href={`/${currentLocale}/applications/${feature.slug}`}
                        class="group flex flex-col justify-between p-6 rounded-2xl bg-white border border-slate-200 hover:border-violet-500 hover:shadow-lg hover:shadow-violet-500/10 transition-all duration-300 h-full"
                    >
                        <div>
                            <div class="w-10 h-10 rounded-lg bg-slate-50 flex items-center justify-center text-xl mb-4 group-hover:bg-violet-50 group-hover:scale-110 transition-transform duration-300">
                                {feature.icon}
                            </div>
                            <h3 class="font-serif text-lg font-bold text-slate-900 mb-1">{feature.title}</h3>
                            <p class="text-xs font-bold text-violet-600 uppercase tracking-wide mb-3">{feature.short}</p>
                            <p class="text-sm text-slate-500 leading-relaxed">
                                {feature.description}
                            </p>
                        </div>
                        
                        <div class="mt-6 flex items-center text-sm font-medium text-slate-900 opacity-0 group-hover:opacity-100 transition-opacity duration-300 -translate-x-2 group-hover:translate-x-0">
                            Learn more <span class="ml-1">â†’</span>
                        </div>
                    </a>
                ))}
            </div>
        </section>

    </div>
</Layout>

<script>
    // Logic to detect OS and update the button text
    document.addEventListener('DOMContentLoaded', () => {
        const osLabel = document.getElementById('os-detect-text');
        const btnLabel = document.getElementById('btn-label');
        
        let osName = "Unknown OS";
        
        if (navigator.userAgent.indexOf("Win") != -1) osName = "Windows";
        else if (navigator.userAgent.indexOf("Mac") != -1) osName = "macOS";
        else if (navigator.userAgent.indexOf("Linux") != -1) osName = "Linux";
        else if (navigator.userAgent.indexOf("Android") != -1) osName = "Android";
        else if (navigator.userAgent.indexOf("like Mac") != -1) osName = "iOS";

        if (osLabel) osLabel.textContent = `Detected for ${osName}`;
        if (btnLabel) btnLabel.textContent = `Download for ${osName}`;
    });
</script>
